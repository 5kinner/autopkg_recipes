<?xml version="1.0" encoding="UTF-8"?>
<policy>
  <general>
    <name>%POLICY_NAME%</name>
    <enabled>true</enabled>
    <frequency>Ongoing</frequency>
    <category>
      <name>%POLICY_CATEGORY%</name>
    </category>
    <override_default_settings>
      <force_afp_smb>false</force_afp_smb>
    </override_default_settings>
  </general>
  <scope>
    <all_computers>false</all_computers>
    <computers/>
    <computer_groups>
      <computer_group>
        <name>%TARGET_GROUP_NAME%</name>
      </computer_group>
    </computer_groups>
    <limit_to_users>
        <user_groups>
            <user_group>%AD_GROUP%</user_group>
            <user_group>%AD_GROUP2%</user_group>
        </user_groups>
    </limit_to_users>
    <limitations>
        <users>
            <user>
                <name>%TESTER_USERNAME%</name>
            </user>
        </users>
        <user_groups>
            <user_group>
                <name>%AD_GROUP%</name>
                <name>%AD_GROUP2%</name>
            </user_group>
        </user_groups>
        <network_segments/>
        <ibeacons/>
    </limitations>
  </scope>
  <self_service>
    <use_for_self_service>true</use_for_self_service>
    <self_service_display_name>%SELF_SERVICE_DISPLAY_NAME%</self_service_display_name>
    <install_button_text>Install</install_button_text>
    <reinstall_button_text>Reinstall</reinstall_button_text>
    <self_service_description>%SELF_SERVICE_DESCRIPTION%</self_service_description>
    <force_users_to_view_description>false</force_users_to_view_description>
    <feature_on_main_page>false</feature_on_main_page>
    <self_service_categories>
      <category>
        <name>%POLICY_CATEGORY%</name>
        <display_in>true</display_in>
        <feature_in>false</feature_in>
      </category>
    </self_service_categories>
  </self_service>
  <package_configuration>
    <packages>
      <size>2</size>
      <package>
        <name>%pkg_name%</name>
        <action>Install</action>
      </package>
      <package>
        <name>%EXTRA_PKG%</name>
        <action>Install</action>
      </package>
    </packages>
  </package_configuration>
  <maintenance>
    <recon>true</recon>
  </maintenance>
  <files_processes>
    <run_command/>
  </files_processes>
</policy>
